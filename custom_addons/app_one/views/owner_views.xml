<odoo>
    <record id="owner_view_tree" model="ir.ui.view">
        <field name="name">owner tree</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" create="1" delete="1">
                <field name="name"/>
                <field name="phone"/>
                <field name="address"/>
            </tree>
        </field>
    </record>


    <record id="owner_view_form" model="ir.ui.view">
        <field name="name">owner form</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
            <form multi_edit="1" create="1" delete="1">
              <sheet>
                 <div class="oe_title">
                     <label for="name"/>
                     <h1>
                         <field name="name"/>
                     </h1>
                 </div>
                 <group>
                     <group>
                         <field name="phone"/>
                         <field name="address"/>
                     </group>
                     <group>
                         <field name="property_ids" />
                     </group>
                     <group>
                     </group>
                 </group>
              </sheet>
            </form>
        </field>
    </record>


    <record id="owner_action" model="ir.actions.act_window">
             <field name="name">owner action</field>
        <field name="res_model">owner</field>
    </record>



    <menuitem
        id="owner_ment_item"
        name="owner"
        parent="configration_menu"
        action="owner_action"
    />

</odoo>